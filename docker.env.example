# 🔑 智能文档处理系统 - Docker环境变量配置示例
# 复制此文件为 .env 并填入真实值

# 阿里云DashScope API密钥（必需）
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 存储路径配置
UPLOAD_DIR=uploads
VECTOR_DB_DIR=vector
LOGS_DIR=logs

# AI模型配置
MODEL_NAME=qwen-max
TEMPERATURE=0.3
MAX_TOKENS=2000
MAX_CONTEXT_LENGTH=6000

# 向量模型配置
VECTOR_MODEL=BAAI/bge-m3
DEVICE=auto  # auto, cpu, cuda 